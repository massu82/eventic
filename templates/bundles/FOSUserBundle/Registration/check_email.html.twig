{% extends "Global/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% set pagetitle = 'registration.check_email'|trans({'%email%': user.email}) %}

{% block title %}{{pagetitle}}{% endblock %}

{% block content %}

    <section class="section-content padding-y bg-white">
        <div class="{{ services.getSetting("app_layout") }}">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card box">
                        <div class="card-body">
                            <p class="text-center"><i class="fas fa-envelope-open-text fa-8x text-success"></i></p>
                            <h3 class="text-center">{{ 'registration.check_email'|trans({'%email%': user.email}) }}</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

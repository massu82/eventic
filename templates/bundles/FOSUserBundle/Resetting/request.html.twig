{% extends "Global/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% set pagetitle = 'Reset your password'|trans({}, 'messages') %}

{% block title %}{{pagetitle}}{% endblock %}

{% block content %}

    <section class="section-content padding-y bg-white">
        <div class="{{ services.getSetting("app_layout") }}">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card box">
                        <div class="card-body">
                            <div class="col-12 col-md-6 mx-auto">
                                <h1 class="text-center">{{ pagetitle }}</h1>
                                <form action="{{ path('fos_user_resetting_send_email') }}" method="POST">
                                    <div class="form-group input-group mt-4 mb-4">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text border-0"> <i class="fas fa-envelope"></i> </span>
                                        </div>
                                        <input name="username" class="form-control" placeholder="{{ 'resetting.request.username'|trans }}" type="text" required>
                                    </div>
                                    <div class="form-group">
                                        <button type="submit" class="btn btn-primary btn-block">{{ 'resetting.request.submit'|trans }}</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}

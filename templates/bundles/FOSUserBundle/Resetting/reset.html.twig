{% extends "Global/layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% set pagetitle = 'Set a new password'|trans({}, 'messages') %}

{% block title %}{{pagetitle}}{% endblock %}

{% block content %}

    <section class="section-content padding-y bg-white">
        <div class="{{ services.getSetting("app_layout") }}">
            <div class="row">
                <div class="col-sm-12">
                    <div class="card box">
                        <div class="card-body">
                            <div class="col-12 col-md-6 mx-auto">

                                {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token})}, {'attr': {'novalidate': 'novalidate'}}) }}
                                {{ form_widget(form) }}

                                <div class="form-group">
                                    <button type="submit" class="btn btn-primary btn-block">{{ 'resetting.reset.submit'|trans }}</button>
                                </div>

                                {{ form_end(form) }}

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
